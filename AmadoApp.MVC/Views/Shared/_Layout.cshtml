                            <a href="https://fr-fr.facebook.com/getfurni/"><i class="fab fa-facebook"></i></a>
                            <a href="https://twitter.com/furni?lang=en"><i class="fab fa-twitter"></i></a>
                            <a href="https://www.linkedin.com/company/businessfurni/"><i class="fab fa-linkedin"></i></a>
                        </div>
                    </div>
                    <div class="right">
                        <div class="box">
                            <ul>
                                <li><a asp-action="Index" asp-controller="About" style="text-decoration:none;color:#333">About</a></li>
                                <li><a asp-action="Index" asp-controller="Services" style="text-decoration:none;color:#333">Services</a></li>
                                <li><a asp-action="Index" asp-controller="Blog" style="text-decoration:none;color:#333">Blog</a></li>
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item"><a class="nav-link" asp-action="Login" asp-controller="Account" style="text-decoration:none;color:#333">Login</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-action="Register" asp-controller="Account" style="text-decoration:none;color:#333">Register</a></li>
                                }
                                else
                                {
                                    <li class="nav-item"><a class="nav-link" asp-action="Logout" asp-controller="Account" style="text-decoration:none;color:#333">Logout</a></li>
                                    if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                                    {
                                        <li class="nav-item"><a class="nav-link" asp-area="Manage" asp-action="Index" asp-controller="Admin" style="text-decoration:none;color:#333">Admin Panel</a></li>
                                    }
                                }
                            </ul>
                        </div>

                        <div class="box">
                            <ul>
                                <li>Support</li>
                                <li>Knowledge base</li>
                                <li>Live chat</li>
                            </ul>
                        </div>
                        <div class="box">
                            <ul>
                                <li>Jobs</li>
                                <li>Our team</li>
                                <li>Leadership</li>
                                <li>Privacy policy</li>
                            </ul>
                        </div>
                        <div class="box">
                            <ul>
                                <li>Nordic chair</li>
                                <li>Kruzo Aero</li>
                                <li>Ergonomic chair</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="down">
                <div class="left">
                    <p>Copyright ©2024. All Rights Reserved. — Designed with love by Karam Mammadli </p>
                    <p>Distributed By Code Academy</p>
                </div>
                <div class="right">
                    <ul>
                        <li>Terms & Conditions</li>
                        <li>Privacy Policy</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/assets/js/jquery/jquery-2.2.4.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/active.js"></script>
    <script src="~/assets/js/script.js"></script>
