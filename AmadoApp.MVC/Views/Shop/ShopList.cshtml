@using AmadoApp.Business.ViewModels.PageVMs;
@model HomeVM
<div class="shop_sidebar_area">
    <section class="blogImage">
        <div class="blog">
            <div class="left">
                <h1>Shop</h1>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="container mt-3">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-primary" onclick="toggleForm()">Filter</button>
                            <form id="priceFilterForm" style="display: none;" onsubmit="event.preventDefault(); applyPriceFilter()">
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input type="number" class="form-control" placeholder="Min Price" name="min" id="minPrice">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input type="number" class="form-control" placeholder="Max Price" name="max" id="maxPrice">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <select name="order" class="form-select">
                                            <option selected disabled hidden>Sort By</option>
                                            <option value="ProductName">Product Name</option>
                                            <option value="LowtoHigh">Price: Low to High</option>
                                            <option value="HightoLow">Price: High to Low</option>
                                            <option value="Featured">Featured</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <a type="submit" asp-action="ShopList" asp-controller="Shop" class="btn btn-success">Apply Filter</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>



				<section>
					<div class="container mt-5">
						<div class="row">
							@foreach (var item in Model.Products)
							{
								<div class="col-md-3 mb-4">
									<!-- Aralık eklenmiş burası -->
									<div class="card-sl">
										<div class="card-image">
											<img src="~/Upload/ProductImages/@item.ProductImages.FirstOrDefault().ImageUrl" alt="">
										</div>

										<a class="card-action" asp-route-id="@item.Id" asp-action="ProductSingle" asp-controller="Shop"><i class="fa fa-long-arrow-right"></i></a>
										<div class="card-heading">
											@item.Title
										</div>
										<div class="card-text">
											In Stock: @if (item.IsInStock == true)
											{
												<i class="fa fa-check" aria-hidden="true"></i>
											}
											else
											{
												<i class="fa fa-close"></i>
											}
										</div>
										<div class="card-text">
											$@item.Price
										</div>
										<a href="#" class="card-button"> Details</a>
									</div>
								</div>
							}
						</div>
					</div>
				</section>

            </div>
        </div>
    </section>
        <div class="row">
            <div class="col-12">
                <!-- Pagination -->
                <nav aria-label="navigation">
                    <ul class="pagination justify-content-end mt-50">
                        <li class="page-item active"><a class="page-link" href="#">01.</a></li>
                        <li class="page-item"><a class="page-link" href="#">02.</a></li>
                        <li class="page-item"><a class="page-link" href="#">03.</a></li>
                        <li class="page-item"><a class="page-link" href="#">04.</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<script>
	function toggleForm() {
		var form = document.getElementById('priceFilterForm');
		if (form.style.display === 'none') {
			form.style.display = 'block';
		} else {
			form.style.display = 'none';
		}
	}
</script>
<script>
	function applyPriceFilter() {
		var minPrice = document.getElementById('minPrice').value;
		var maxPrice = document.getElementById('maxPrice').value;

	}
</script>
