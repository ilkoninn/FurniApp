@model List<MyDeal.Entities.Auction>
<div class="row">
	<div class="col-lg-12">
		<h2>Auctions</h2>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>
						Title
					</th>
					<th>
						Description
					</th>
					<th>
						Actual Price
					</th>
					<th>
						Starting Time
					</th>
					<th>
						Ending Time
					</th>
					<th>
						Actions
					</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var auction in Model)
				{
					<tr>
						<td>
							<input type="hidden" value="@auction.AuctionId" />
							@auction.Title
						</td>
						<td>
							@auction.Description
						</td>
						<td>
							@auction.ActualPrice
						</td>
						<td>
							@auction.StartingTime
						</td>
						<td>
							@auction.EndingTime
						</td>
						<td>


							<button class="btn btn-primary" onclick="editAuction('@auction.AuctionId')">Edit</button>
							<button class="btn btn-danger" onclick="deleteAuction('@auction.AuctionId')">Delete</button>
						</td>
					</tr>
				}

			</tbody>
		</table>

		<button class="btn btn-success" onclick="createAuction()">Create</button>
	</div>

</div>


<script>
	function editAuction(auctionId) {
		window.location.href = "Edit/" + auctionId;
	}
	function deleteAuction(auctionId) {
		window.location.href = "Delete/" + auctionId;
	}
	function createAuction() {
		window.location.href = "Create/";
	}
</script>
