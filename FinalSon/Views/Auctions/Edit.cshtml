@model MyDeal.Entities.Auction

<h2>Edit Auction</h2>


<form method="post">
	<input type="hidden" asp-for="@Model.ID"/>
	<div class="form-group">
		<label>
			Title
		</label>
		<input name="Title" value="@Model.Title" />
	</div>
	
	<br />
	<hr />


	<div class="form-group">
		<label>
			Description
		</label>
		<input name="Description" value="@Model.Description" />
	</div>
	

	<br />
	<hr />

	<div class="form-group">
		<label>
			ActualPrice
		</label>
		<input name="ActualPrice" value="@Model.ActualPrice" />
	</div>
	

	<br />
	<hr />

	<div class="form-group">
		<label>
			StartingTime
		</label>
		<input type="date" name="StartingTime" value="@Model.StartingTime" />
	</div>
	

	<br />
	<hr />

	<div class="form-group">
		<label>
			EndingTime
		</label>
		<input type="date" name="EndingTime" value="@Model.EndingTime" />
	</div>
	

	<br />
	<hr />

	<div class="form-group">
		<label for="lang">Type of Car</label>
		<select name="carType">
			@foreach (var carType in Enum.GetValues(typeof(MyDeal.Entities.TypeOfCar)))
			{
				<option style="font-weight:bold" value="@((int)carType)">@carType</option>
			}
		</select>
	</div>
	<br />
	<hr />

	<div class="form-group">
		<label>Select Photos</label>
		<input id="formFiles" class="form-control" type="file" name="formFiles" multiple />
	</div>



	<br />
	<button class="btn btn-success">
		Save
	</button>
</form>